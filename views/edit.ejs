<%- include("partials/header") %>

<div class="ui container main segment text">
    <h1>Edit <%= blog.title %></h1>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image URL" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="blog[body]" placeholder="Content goes here (HTML tags supported)"><%= blog.body %></textarea>
        </div>
        <button class="ui violet basic button big">Submit</button>
    </form>
</div>

<%- include("partials/footer") %>